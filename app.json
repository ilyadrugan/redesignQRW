{
  "expo": {
    "name": "QRW",
    "slug": "qrw",
    "description": "Приложение для хранения QR-кодов",
    "version": "1.1.0",
    "sdkVersion": "42.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "infoPlist": {
        "NSCameraUsageDescription": "Это приложение использует библиотеку фотографий для сканирования штрих-кодов на выбранных вами фотографиях",
        "NSPhotoLibraryUsageDescription": "Это приложение использует камеру для сканирования штрих-кодов",
        "CFBundleAllowMixedLocalizations": true
      },
      "supportsTablet": true,
      "bundleIdentifier": "com.qrwallet",
      "buildNumber": "2"
    },
    "locales": {
      "ru": "./app/locales/russian.json",
      "en": "./app/locales/english.json"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#39E400"
      },
      "package": "com.qrw",
      "versionCode": 12
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "expo.ts",
        "expo.tsx",
        "expo.js",
        "expo.jsx",
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "wasm",
        "svg"
      ]
    }
  }
}
